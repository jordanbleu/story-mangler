  "components": {
    "schemas": {
      "ErrorResponseModel": {
        "type": "object",
        "properties": {
          "errorCode": {
            "type": "string",
            "description": "Error code representing the specific error.",
            "nullable": true
          },
          "message": {
            "type": "string",
            "description": "Localized copy for the error",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "description": "Internal details about the error, if applicable.  Will always be in English.",
            "nullable": true
          },
          "callId": {
            "type": "string",
            "description": "The unique callid passed in from the Client if present.",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "HelloWorldGetResponse": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "StoryClientType": {
        "enum": [
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      },
      "StoryPostRequest": {
